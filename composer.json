{
  "name": "angelxmoreno/doba-api",
  "description": "A PHP library for interacting with the Doba API",
  "keywords": [
    "dropshipping",
    "doba",
    "api"
  ],
  "homepage": "https://github.com/angelxmoreno/doba-api",
  "support": {
    "issues": "https://github.com/angelxmoreno/doba-api/issues"
  },
  "authors": [
    {
      "name": "Angel S. Moreno",
      "email": "angelxmoreno@gmail.com"
    }
  ],
  "license": "MIT",
  "type": "library",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "Axm\\DobaApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Axm\\DobaApi\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "tests": "kahlan --config=.kahlan.php",
    "tests:coverage": "kahlan --config=.kahlan.php --coverage=4",
    "tests:report": "kahlan --cc=true --reporter=bar --coverage=4 --clover=clover.xml",
    "tests:clover": "kahlan --no-header --cc=true --reporter=bar --clover=clover.xml",

    "cs:check": "phpcs --standard=ruleset.xml",
    "cs:fix": "phpcbf -v --standard=ruleset.xml",
    "md:check": "phpmd . text phpmd.xml --exclude /vendor/,/tmp/,/logs/ --suffixes php --colors"
  },
  "require": {
    "php": "^7.2",
    "ext-json": "^1.6",
    "cakephp/collection": "^3.6",
    "cakephp/utility": "^3.6",
    "guzzlehttp/guzzle": "~6.0",
    "monolog/monolog": "^1.23",
    "rakshazi/get-set-trait": "^1.0",
    "symfony/cache": "^4.1"
  },
  "require-dev": {
    "angelxmoreno/get-set-annotations": "^1.1",
    "codacy/coverage": "^1.4",
    "codeclimate/php-test-reporter": "^0.4.4",
    "kahlan/kahlan": "^4.1",
    "php-di/php-di": "^6.0",
    "phpmd/phpmd": "^2.6",
    "squizlabs/php_codesniffer": "^3.3"
  }
}
